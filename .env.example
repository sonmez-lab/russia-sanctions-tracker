# Russia Sanctions Tracker - Environment Variables

# Application
DEBUG=false
HOST=0.0.0.0
PORT=8001

# Database (PostgreSQL)
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/russia_sanctions_tracker

# Redis
REDIS_URL=redis://localhost:6379/1

# Blockchain API Keys (optional but recommended for higher rate limits)
ETHERSCAN_API_KEY=your_etherscan_api_key
TRONGRID_API_KEY=your_trongrid_api_key
BLOCKCHAIR_API_KEY=your_blockchair_api_key

# Monitoring Settings
MONITOR_INTERVAL_MINUTES=10
ALERT_THRESHOLD_USD=50000

# Sanctions List Update Interval
SANCTIONS_UPDATE_INTERVAL_HOURS=12
